{
  "name": "Hotel Management_BE",
  "version": "1.0.0",
  "description": "Backend for Hotel Management System, built with Express and TypeScript, featuring user authentication, room booking, invoicing, and email notifications, utilizing MongoDB and Supabase for data management, designed to streamline hotel operations, enhance customer experience, and improve operational efficiency.",
  "main": "index.js",
  "scripts": {
    "start": "nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "build": "tsc",
    "start:prod": "node dist/src/server.js",
    "dev": "ts-node-dev --respawn ./src/server.ts",
    "deploy": "npm run build && npm run start:prod",
    "create:tables": "ts-node ./src/scripts/create-tables.ts",
    "seed:data": "ts-node ./src/scripts/seed-data.ts",
    "test:full": "npm run create:tables && npm run seed:data"
  },
  "lint-staged": {
    "**/*.{js,ts,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [],
  "author": "Dev Mentorship Community",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^16.3.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "tsconfig-paths": "^4.2.0",
    "typescript-eslint": "^8.39.1"
  },
  "dependencies": {
    "@faker-js/faker": "^9.9.0",
    "@sendgrid/mail": "^8.1.6",
    "@supabase/supabase-js": "^2.76.1",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "@types/safe-json-stringify": "^1.1.5",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1",
    "puppeteer": "^24.26.0",
    "safe-json-stringify": "^1.2.0",
    "ts-jest": "^29.4.1",
    "ts-node-dev": "^2.0.0",
    "util": "^0.12.5",
    "winston": "^3.17.0",
    "zod": "^4.0.17"
  }
}
